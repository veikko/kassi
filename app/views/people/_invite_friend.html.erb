<div id='people-invite-a-friend'>
	
	<% form_tag( { :controller => "people", :action => "invite_new_user" }, :method => "post" ) do %>
		<%= hidden_field( :sender, :value , :value => @current_user.id) %>
		<%= t('name')%> <br/>
		<%= text_field_tag( :to_name ) %> <br/>
		<%= t('email')%> <br/>
		<%= text_field_tag( :to_email ) %> <br/>
		<%= submit_tag t('invite') %>
	<% end %>
	
</div>
